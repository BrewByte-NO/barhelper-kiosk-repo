[Unit]
Description=Barhelper kiosk (cage + chromium)
After=systemd-user-sessions.service network-online.target
Wants=network-online.target
Conflicts=getty@tty1.service

[Service]
Type=simple
User=barhelper
PAMName=login

TTYPath=/dev/tty1
TTYReset=yes
TTYVHangup=yes
TTYVTDisallocate=yes
StandardInput=tty
StandardOutput=journal
StandardError=journal

Environment=HOME=/home/barhelper
ExecStart=/usr/bin/barhelper-kiosk
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
